<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vctls.bookmarkkeywords">

    <!--
    TODO Re-enable backups once initial database schema is fixed.
    Any way to force database recreation without using migrations during development?
    -->
    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@drawable/ic_star_magnifier"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_star_magnifier"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookmarkKeywords">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BookmarkKeywords.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>